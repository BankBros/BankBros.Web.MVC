    <link rel="stylesheet" type="text/css" href="~/LoginV20/css/main.css">
    <!--===============================================================================================-->
</head>
<body>
    

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-b-160 p-t-50">
                <form action="@Url.Action("Login", "Home")" method="post" enctype="multipart/form-data" class="login100-form validate-form">
                    <span class="login100-form-title p-b-43">
                        Bireysel Müşteri Giriş Ekranı
                    </span>
                    @if (Session["ErrMsg"].ToString() != "")
                    {
                        <script>
                        alert("@Session["ErrMsg"]");
                        </script>

                        Session["ErrMsg"] = "";
                    }

                    <div class="wrap-input100 rs1 validate-input" data-validate="TC Kimlik No Boş Geçilemez" style="margin-top:5px;">
                        <input class="input100" type="text" name="tc"
                               onkeypress="if(this.value.length>=11) { return false}"
                               onkeydown="return ( event.ctrlKey || event.altKey
                               || (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
                    || (95<event.keyCode && event.keyCode<106)
                    || (event.keyCode==8) || (event.keyCode==9)
                    || (event.keyCode>34 && event.keyCode<40)
                    || (event.keyCode==46) )"

                               oninput="if(this.value.length>=11) { this.value = this.value.slice(0,11); }" pattern="[0-9]{11}">
                        <span class="label-input100">TC Kimlik No</span>
                    </div>


                    <div class="wrap-input100 rs2 validate-input" data-validate="Password is required" style="margin-top:5px;">
                        <input class="input100" type="password" name="pw"
                               onkeypress="if(this.value.length>=6) { return false}"
                               onkeydown="return ( event.ctrlKey || event.altKey
                               || (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
                    || (95<event.keyCode && event.keyCode<106)
                    || (event.keyCode==8) || (event.keyCode==9)
                    || (event.keyCode>34 && event.keyCode<40)
                    || (event.keyCode==46) )"

                               oninput="if(this.value.length>=6) { this.value = this.value.slice(0,6); }"


                               pattern="[0-9]{4,6}">
                        <span class="label-input100">Şifre</span>
                    </div>

                    <div class="container-login100-form-btn" style="margin-top:5px;">
                        <button class="login100-form-btn">
                            Giriş Yap
                        </button>
                    </div>


                </form>
                <div class="container-login100-form-btn">
                    <button class="login100-form-btn" style="border-bottom-left-radius: 12px;
                                border-bottom-right-radius: 12px; margin-top:5px;" onclick="location.href='@Url.Action("Register", "Home")'">
                        Kayıt Ol
                    </button>
                </div>
                <div class="container-login100-form-btn">
                    <button class="login100-form-btn" style="border-bottom-left-radius: 12px;
                                border-bottom-right-radius: 12px; margin-top:5px;" onclick="location.href='@Url.Action("Index", "Home")'">
                       Anasayfa
                    </button>
                </div>
            </div>
        </div>
    </div>





    <!--===============================================================================================-->
    <script src="~/LoginV20/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/LoginV20/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
